# Set default behavior to automatically normalize line endings
* text=auto

# Python files
*.py text eol=lf

# Configuration files
*.json text eol=lf
*.yaml text eol=lf
*.yml text eol=lf
*.toml text eol=lf

# Documentation files
*.md text eol=lf
*.rst text eol=lf
*.txt text eol=lf

# Scripts
*.sh text eol=lf
*.bat text eol=crlf

# Data files (but exclude from normalization)
*.csv text eol=lf
*.tsv text eol=lf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
*.zip binary
*.tar.gz binary
